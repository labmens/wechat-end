{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "dist",
    "baseUrl": ".",
    "experimentalDecorators": true,  // 避免警告
    "pretty": true
  }
}